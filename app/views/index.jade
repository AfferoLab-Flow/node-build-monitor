extends layout

block scripts
    script(src='/scripts/libs/jquery-2.1.0.min.js')
    script(src='/scripts/libs/jquery.color-2.1.2.min.js')
    script(data-main="/scripts/main", src='/scripts/libs/require-2.1.15.min.js')

block content
    .full-size(data-bind='component: { name: options.theme(), params: { builds: builds } }')

    div(data-bind='with: options')
        .options-button(data-bind='fade: isMenuButtonVisible')
            a(href='#', data-bind='click: show')
                span.fa.fa-bars

        .options(data-bind='fade: isMenuVisible, fadeOutDuration: 300', style='display: none')
            .background
            .content
                .header
                    span.title Options
                    span.back
                        a(href='#', data-bind='click: hide')
                            span.fa.fa-arrow-left
                hr

                section
                    h1 Theme
                    .description Select your preferred default theme, when you open the monitor without the theme url parameter.

                    .selection-box
                        ul(data-bind='foreach: themes')
                            li(data-bind='css: { selected: $parent.theme() === $data }')
                                a(data-bind='click: $parent.changeTheme')
                                    span(data-bind='text: $data')

                .clear

                section
                    h1 Notifications on failed build
                    .description With enabled browser notifications you can leave the build monitor opened in the background and never miss a failed build.

                    label.checkbox
                        input(type='checkbox', data-bind='checked: browserNotificationEnabled')
                        span Show browser notification
                    
                    label.checkbox
                        input(type='checkbox', data-bind='checked: soundEnabled')
                        span Play sound

    .connection(data-bind='fade: isIntercepted')
        .overlay-background
        .overlay-icon
            span(data-bind='visible: infoType() === "loading"')
                span.fa.fa-5x.fa-circle-o-notch.fa-spin
            span(data-bind='visible: infoType() === "connection"', style='display: none')
                span.fa.fa-5x.fa-plug